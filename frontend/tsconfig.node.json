{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "module": "Node16",
    "moduleResolution": "node16",
    "strict": true,
    "types": ["node", "vite/client"],
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["vite.config.js", "src/**/*"]
}
